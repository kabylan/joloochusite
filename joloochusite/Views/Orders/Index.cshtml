@model IEnumerable<joloochusite.Model.Order>
@using joloochusite.Model

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Каяктан</label>
                <input type="text" name="StartPointString" class="form-control" list="Points">
            </div>


            <div class="form-group">
                <label class="control-label">Каяка</label>
                <input type="text" name="EndPointString" class="form-control" list="Points">
            </div>

            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Издөө" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div class="overflow-auto">

    <h4>Жол тизмеси</h4>
    <table class="table">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Car)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.StartPoint)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndPoint)
